datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int       @id @default(autoincrement())
  email    String    @unique
  password String
  name     String
  role     String    @default("seller")
  products Product[] @relation("UserProducts")
}

model Product {
  id       Int      @id @default(autoincrement())
  name     String
  sku      String   @unique
  quantity Int
  price    Float
  sellerId Int
  seller   User     @relation("UserProducts", fields: [sellerId], references: [id])
}
